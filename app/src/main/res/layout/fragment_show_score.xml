<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ShowScoreFragment">
    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/show_score_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_titleText="查看成绩"
        app:tb_subTitleText="近五次成绩"
        app:tb_barHeight="65dp"
        app:tb_leftText="返回"
        app:tb_leftImageResource="@drawable/icon_back_white"
        app:tb_actionPadding="10dp"
        app:tb_sideTextPadding="10dp"
        app:tb_titleTextSize="25sp"
        app:tb_subTitleTextSize="16sp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <com.github.mikephil.charting.charts.LineChart
            android:layout_marginTop="10dp"
            android:id="@+id/score_line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>



</LinearLayout>